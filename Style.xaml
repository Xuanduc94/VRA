<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Style TargetType="Button" x:Key="NormalButton">
        <Setter Property="Background" Value="White"/>
        <Setter Property="MinWidth" Value="100"/>
        <Setter Property="MinHeight" Value="30"/>
    </Style>
    <Style TargetType="Button" x:Key="PrimaryButton">
        <Setter Property="Background" Value="#76bef5"/>
        <Setter Property="MinWidth" Value="100"/>
        <Setter Property="MinHeight" Value="30"/>
    </Style>

    <Style TargetType="Button" x:Key="DangerButton">
        <Setter Property="Background" Value="#f72f46"/>
        <Setter Property="MinWidth" Value="100"/>
        <Setter Property="MinHeight" Value="30"/>
    </Style>

    <Style TargetType="Label" x:Key="labelNormal">
        <Setter Property="MinWidth" Value="100"/>
        <Setter Property="MinHeight" Value="30"/>
    </Style>

    <Style TargetType="Label" x:Key="labelHeading">
        <Setter Property="FontSize" Value="14pt"/>
    </Style>
</ResourceDictionary>